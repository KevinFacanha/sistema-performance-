{
  "functions": {
    "api/**/*.js,cjs,ts": {
      "runtime": "nodejs20.x",
      "memory": 512,
      "maxDuration": 30
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(assets/.*)", "dest": "/dist/$1" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/dist/index.html" }
  ]
}
